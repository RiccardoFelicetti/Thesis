<?xml version="1.0" encoding="UTF-8"?>

<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
   <OCD id="org.eclipse.kura.wire.Decorator"
         name="Decorator" 
         description="This is a decorator component. It permits to add more information in the envelopes that pass through it ">
      
       <AD id="device.id"
            name="ID"
            type="String"
            cardinality="0"
            required="false"
            default=""
            description="ID of the device. You can use the Serial Number">
        </AD>
       
       <AD id="position.enable"
            name="Position"
            type="Boolean"
            cardinality="0"
            required="true"
            default="false"
            description="If false, position will not be used.">
        </AD>
        
        <AD id="position.lat"
            name="Latitude"
            type="Double"
            cardinality="0"
            required="false"
            default=""
            description="Latitude of the device">
        </AD>
        
        <AD id="position.long"
            name="Longitude"
            type="Double"
            cardinality="0"
            required="false"
            default=""
            description="Longitude of the device">
        </AD>
        
        <AD id="device.desc"
            name="Description"
            type="String"
            cardinality="0"
            required="false"
            default=""
            description="General description of the device">
        </AD>      
                
        
        </OCD>
    
    <Designate pid="org.eclipse.kura.wire.Decorator" factoryPid="org.eclipse.kura.wire.Decorator">
        <Object ocdref="org.eclipse.kura.wire.Decorator"/>
    </Designate>
    
</MetaData>
